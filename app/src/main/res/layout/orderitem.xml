<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        android:padding="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/orderitem_image"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:background="@drawable/rounded_edittext"
                app:srcCompat="@drawable/signinbg"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">
                <TextView
                    android:id="@+id/orderitem_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shakey's Pizza"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/orderitem_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29 Nov, 01:20 pm "
                    android:layout_marginTop="-10dp"/>

                <Button
                    android:id="@+id/orderitem_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:text="Cancel Order"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:padding="5dp">
                <TextView
                    android:id="@+id/orderitem_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â‚±20.00"
                    android:gravity="end"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/orderitem_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 items"
                    android:gravity="end"
                    android:fontFamily="@font/poppins"
                    android:textSize="10sp"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>