<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCartFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F5CB58"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp"
            android:paddingBottom="0dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Leave a Review"
                android:textSize="30sp" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_pagecard"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/food_imageReview"
                    android:layout_width="162dp"
                    android:layout_height="162dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:contextClickable="true"
                    android:src="@drawable/carticon"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/add_smth_text"
                    android:layout_width="229dp"
                    android:layout_height="74dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/obsidian"
                    android:foregroundGravity="center"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Chicken Curry"
                    android:textSize="20sp"
                    app:layout_constraintTop_toBottomOf="@+id/food_imageReview" />

                <TextView
                    android:id="@+id/feedback_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/obsidian"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="We'd love to know what you think of your dish."
                    android:textSize="18sp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    app:layout_constraintBottom_toTopOf="@+id/food_imageReview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:stepSize=".5"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:progressBackgroundTint="@color/gray">

                </RatingBar>

                <TextView
                    android:id="@+id/feedback_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/obsidian"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/poppins"
                    android:text="Leave us your comment!"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/food_imageReview" />

                <EditText
                    android:id="@+id/ET_Feedback"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="10"
                    android:minLines="6"
                    android:background="@color/lightYellow"
                    android:scrollbars="vertical" />







                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btn_CancelFeedback"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Cancel"
                        android:textColor="@color/redMaroon"
                        android:textAllCaps="false"
                        android:background="@drawable/shape2"/>

                    <Button
                        android:id="@+id/btn_SubmitFeedback"
                        android:textAllCaps="false"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:background="@drawable/shape"/>

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>








    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
