<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ReviewFragment">

    <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#F5CB58"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Leave a Review"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_pagecard"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="611dp"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <ImageView
                        android:id="@+id/food_imageReview"
                        android:layout_width="162dp"
                        android:layout_height="162dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:src="@drawable/carticon"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/add_smth_text"
                        android:layout_width="229dp"
                        android:layout_height="74dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="Chicken Curry"
                        android:textColor="@color/obsidian"
                        android:textSize="20sp"
                        app:layout_constraintTop_toBottomOf="@+id/food_imageReview" />

                    <TextView
                        android:id="@+id/feedback_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:text="We'd love to know what you think of your dish."
                        android:textColor="@color/obsidian"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/food_imageReview"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:progressBackgroundTint="@color/gray"
                        android:scaleX="1"
                        android:scaleY="1"
                        android:stepSize=".5">

                    </RatingBar>

                    <TextView
                        android:id="@+id/feedback_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Leave us your comment!"
                        android:textColor="@color/obsidian"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/food_imageReview" />

                    <EditText
                        android:id="@+id/ET_Feedback"
                        android:layout_width="300dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:background="@color/lightYellow"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:maxLines="10"
                        android:minLines="6"
                        android:scrollbars="vertical" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/btn_CancelFeedback"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape2"
                            android:text="Cancel"
                            android:textAllCaps="false"
                            android:textColor="@color/redMaroon" />

                        <Button
                            android:id="@+id/btn_SubmitFeedback"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:background="@drawable/shape"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>








        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
